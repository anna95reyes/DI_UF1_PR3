<Page
    x:Class="NBA.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NBA"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Grid>
        <NavigationView ItemInvoked="NavigationView_ItemInvoked" PaneDisplayMode="Top" IsPaneOpen="False">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="nviTeamEditor" Content="Team editor"/>
                <NavigationViewItem x:Name="nviPlayOffBracket" Content="Play-off Bracket"/>
            </NavigationView.MenuItems>

            <ScrollViewer>
                <Frame x:Name="frmPrincipal" IsTabStop="True"/>
            </ScrollViewer>
        </NavigationView>
    </Grid>
</Page>
